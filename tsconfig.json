{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "allowJs": true,
        "moduleResolution": "Node",
        "jsx": "react",
        "noEmit": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    }
}
